<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#2e50b8"
    tools:context="com.example.android.itsector.LoginActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ITSector_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:gravity="center_horizontal"
            android:text="IT Sector"
            android:textSize="56sp"
            android:textColor="@color/abc_primary_text_material_dark"
            android:fontFamily="@string/abc_font_family_headline_material"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="72dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/insert_pin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ITSector_header"
            android:gravity="center_horizontal"
            android:text="Insert Pin"
            android:textSize="24sp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="4dp"
            android:textColor="@color/abc_primary_text_material_dark" />



    </LinearLayout>

    <LinearLayout
        android:id="@+id/rings_linear_layout"
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_margin="8dp"
        android:layout_below="@id/linearLayout">

        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ring"
            android:layout_weight="2"/>

        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ring"
            android:layout_weight="2"/>

        <View
            android:layout_width="62dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ring" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ring"
            android:layout_weight="2"/>


    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rings_linear_layout"
        android:id="@+id/linearLayout2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_centerHorizontal="true"
            android:id="@+id/Pin_linearLayout1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/Pin1"
                android:layout_width="16dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:ems="10"
                android:text="1"
                android:background="@color/Pin_button_color"
                android:textColor="@color/abc_primary_text_material_dark"
                style="@style/Base.AlertDialog.AppCompat" />

            <Button
                android:id="@+id/Pin2"
                android:layout_width="16dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:ems="10"
                android:text="2"
                android:background="@color/Pin_button_color"
                android:textColor="@color/abc_primary_text_material_dark"
                style="@style/Base.AlertDialog.AppCompat" />

            <Button
                android:id="@+id/Pin3"
                android:layout_width="16dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:ems="10"
                android:text="3"
                android:background="@color/Pin_button_color"
                android:textColor="@color/abc_primary_text_material_dark" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout"
            android:layout_centerHorizontal="true"
            android:id="@+id/Pin_linearLayout2"
            android:orientation="horizontal">

            <Button
                android:id="@+id/Pin4"
                android:layout_width="16dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:ems="10"
                android:text="4"
                android:background="@color/Pin_button_color"
                android:textColor="@color/abc_primary_text_material_dark" />

            <Button
                android:id="@+id/Pin5"
                android:layout_width="16dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:ems="10"
                android:text="5"
                android:background="@color/Pin_button_color"
                android:textColor="@color/abc_primary_text_material_dark" />

            <Button
                android:id="@+id/Pin6"
                android:layout_width="16dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:ems="10"
                android:text="6"
                android:background="@color/Pin_button_color"
                android:textColor="@color/abc_primary_text_material_dark" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout"
            android:layout_centerHorizontal="true"
            android:id="@+id/Pin_linearLayout3"
            android:orientation="horizontal">

            <Button
                android:id="@+id/Pin7"
                android:layout_width="16dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:ems="10"
                android:text="7"
                android:background="@color/Pin_button_color"
                android:textColor="@color/abc_primary_text_material_dark" />

            <Button
                android:id="@+id/Pin8"
                android:layout_width="16dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:ems="10"
                android:text="8"
                android:background="@color/Pin_button_color"
                android:textColor="@color/abc_primary_text_material_dark" />

            <Button
                android:id="@+id/Pin9"
                android:layout_width="16dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:ems="10"
                android:text="9"
                android:background="@color/Pin_button_color"
                android:textColor="@color/abc_primary_text_material_dark" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/Pin_linearLayout4"
            android:orientation="horizontal">

            <Button
                android:id="@+id/blank"
                android:layout_width="16dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:ems="10"
                android:background="@color/Pin_button_color"
                android:textColor="@color/abc_primary_text_material_dark" />

            <Button
                android:id="@+id/Pin0"
                android:layout_width="16dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:ems="10"
                android:text="0"
                android:background="@color/Pin_button_color"
                android:textColor="@color/abc_primary_text_material_dark" />

            <Button
                android:id="@+id/Pin_backspace"
                android:layout_width="16dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:ems="10"
                android:background="@color/Pin_button_color" />


        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/Pin_text_view"
        android:layout_below="@+id/linearLayout2"
        android:layout_centerHorizontal="true"
        android:visibility="invisible" />

</RelativeLayout>
